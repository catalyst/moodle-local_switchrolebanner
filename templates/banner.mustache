{{!
    @template local_switchrolebanner/banner

    This template renders the main banner.

    Example context (json):
    {}
}}

<div id="switchrolebanner-banner" class="alert alert-info">
    <button type="button" class="close">Ã—</button>
    <div class="switchrolebanner-info mb-2">
        {{{infomessage}}}
    </div>
    <div class="switchrolebanner-buttons mb-2">
        {{{buttons}}}
    </div>
    <div class="switchrolebanner-footer text-center">
        <label data-fieldtype="checkbox" class="form-check mb-0">
            <input type="checkbox" class="form-check-input" id="switchrolebanner-hide-banner">
            Don't show this again for this session
        </label>
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'local_switchrolebanner/main',
],
function(
    $,
    Main
) {
    var root = $('#switchrolebanner-banner');
    Main.init(root, {{courseid}});
});
{{/js}}
